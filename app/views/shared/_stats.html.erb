<% @user ||= current_user %>
<div class="flex justify-center py-4 lg:pt-4 pt-8">
    <a href="<%= following_user_path(@user) %>" class="mr-4 p-3 text-center">
      <span class="text-xl font-bold block uppercase tracking-wide text-blueGray-600"><%= @user.followers.count %></span><span class="text-sm text-blueGray-400">Followers</span>
    </a>
    <div class="mr-4 p-3 text-center">
      <span class="text-xl font-bold block uppercase tracking-wide text-blueGray-600"><%= @user.following.count%></span><span class="text-sm text-blueGray-400">Following</span>
    </div>
    <div class="lg:mr-4 p-3 text-center">
      <% if @user.microposts.any? %>
        <span class="text-xl font-bold block uppercase tracking-wide text-blueGray-600"><%= @user.microposts.count%></span><span class="text-sm text-blueGray-400">No of microposts</span>
      <% else %>
        <span class="text-xl font-bold block uppercase tracking-wide text-blueGray-600">0</span><span class="text-sm text-blueGray-400">No of microposts</span>
      <% end %>
    </div>
  </div>